<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "private events", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Events", events_path %></li>
        <% if logged_in? %>
          <li><%= link_to current_user.name, current_user %></li>
          <li><%= link_to "Pending invites (#{current_user.invitations.count})" , invitations_path(current_user.id) %></li>
          <li><%= link_to "Create invite", new_invitation_path %></li>
          <li><%= link_to "Create event", new_event_path %></li>
          <li><%= link_to "Log out", logout_path , method: :delete %></li>
        <% else %>
          <li><%= link_to "Log in", new_session_path %></li>
          <li><%= link_to "Sign up", new_user_path %></li>   
        <% end %>
      </ul>
    </nav>
  </div>
</header>